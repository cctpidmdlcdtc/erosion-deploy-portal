# Interfaces
listening-ip=10.0.0.1
listening-ip={{ ansible_default_ipv4.address }}

# Puertos
listening-port=3478
tls-listening-port=5349
dtls-listening-port=5349

# Rango dinámico de puertos para relays
min-port=49152
max-port=65535

# Seguridad
fingerprint
realm={{ portal_fqdn }}
cert=/usr/local/etc/turn_server_cert.pem
pkey=/usr/local/etc/turn_server_pkey.pem
# no-tls

# Modo de autenticación TURN REST API
use-auth-secret
static-auth-secret={{ coturn_secret }}

# Otras opciones seguras
no-multicast-peers
no-tcp-relay
total-quota=100
stale-nonce
response-origin-only-with-rfc5780

# Logs
log-file=/var/tmp/turn.log
verbose